{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/server/*": ["server/*"],
      "@/lib/*": ["lib/*"],
      "@/components/*": ["components/*"],
      "@/prisma/*": ["prisma/*"]
    }
  },
  "exclude": ["node_modules", ".next"]
}